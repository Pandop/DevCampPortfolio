<h1>Create a New Item </h1>

<%= form_for(@portfolio_item) do |f| %>
  <div class="fields">
    <%= f.label(:title) %>
    <%= f.text_field(:title) %>
  </div>
  <div class="fields">
    <%= f.label(:subttitle) %>
    <%= f.text_field(:subtitle) %>
  </div>
  <div class="fields">
    <%= f.label(:body) %>
    <%= f.text_area(:body) %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>