<%= link_to("Create New Item", new_portfolio_path) %>

<% @portfolio_items.each do |portfolio_item|%>
  <h3><%= portfolio_item.title %></h3>
  <h4><%= portfolio_item.subtitle %></h4>
  <p><%= portfolio_item.body %></p>
  <%= image_tag(portfolio_item.main_image) unless portfolio_item.thumb_image.nil? %>
  <!--a href="/portfolios/<%= portfolio_item.id %>"></a -->
 <p><%= link_to("Edit", edit_portfolio_path(portfolio_item)) %> 
    <%= link_to("Delete", portfolio_item, method: :delete, data: {confirm: "Are you sure?"}) %>
  </p> 
  
<% end %>


