<div class="container portfolio-container">
  <div class="row">
    <div class="col-md-6">
         <%= image_tag("#{portfolio_img(@portfolio_item.main_image,'main')}" ,width: '80%')
        %> 

    </div>
    <div class="col-md-6">
      <h1><%= @portfolio_item.title %></h1>

      <hr>

      <em><%= @portfolio_item.subtitle %></em>

      <hr>

      <p><%=  @portfolio_item.body %></p>

      <hr>

      <h2>Technologies Used:</h2>

      <% @portfolio_item.technologies.each do |t| %>
        <p><%= t.name %></p>
      <% end %>

      <hr>

      <%#  <!--a href="/portfolios/<%= portfolio_item.id >"></a --> %>
      <% if logged_in?(:site_admin) %>
        <p>
          <%=link_to("Edit", edit_portfolio_path(@portfolio_item))  %> /  
          <%=link_to("Delete", @portfolio_item, method: :delete, data: {confirm: "Are you sure?"}) %>
        </p> 
      <% end %>      
    </div>
  </div>
</div>








