<%= form_for(portfolio_item) do |f| %>
  <div class="fields">
    <%= f.label(:title) %>
    <%= f.text_field(:title) %>
  </div>
  <div class="fields">
    <%= f.label(:subttitle) %>
    <%= f.text_field(:subtitle) %>
  </div>
  <div class="fields">
    <%= f.label(:body) %>
    <%= f.text_area(:body) %>
  </div>
  <ul>
    <%= f.fields_for(:technologies)  do |technology|%>
      <li><%= technology.label(:name) %></li>
      <li><%= technology.text_field(:name) %></li>
    <% end %>
  </ul>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>